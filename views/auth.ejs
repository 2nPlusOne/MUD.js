<html>
    <head>
        <title>MUD.js - Man</title>
        <link rel="stylesheet" href="./css/theme.css">
        <link rel="stylesheet" href="./css/auth.css">
    </head>
    <body>
        <div id="logo">
            <img src="./img/logo.png">
        </div>
        <!-- Item rain -->
        <div id='itemrain' class="itemrain"></div>

        <div class="form-wrap">
            <div class="tabs">
                <h3 class="signup-tab"><a class="active" href="#signup-tab-content">Sign Up</a></h3>
                <h3 class="login-tab"><a href="#login-tab-content">Login</a></h3>
            </div><!--.tabs-->
    
            <div class="tabs-content">
                <div id="signup-tab-content" class="active">
                    <form class="signup-form" action="/auth/register" method="post">
                        <input type="email" class="input" id="user_email" autocomplete="off" placeholder="Email">
                        <input type="text" class="input" id="user_name" autocomplete="off" placeholder="Username">
                        <input type="password" class="input" id="user_pass" autocomplete="off" placeholder="Password">
                        <input type="submit" class="button" value="Sign Up">
                    </form><!--.login-form-->
                    <div class="help-text">
                        <p>By signing up, you agree to our</p>
                        <p><a href="/tos">Terms of service</a></p>
                    </div><!--.help-text-->
                </div><!--.signup-tab-content-->
    
                <div id="login-tab-content">
                    <form class="login-form" action="/login" method="post">
                        <input type="text" class="input" id="user_login" autocomplete="off" placeholder="Email or Username">
                        <input type="password" class="input" id="user_pass" autocomplete="off" placeholder="Password">
                        <input type="checkbox" class="checkbox" id="remember_me">
                        <label for="remember_me">Remember me</label>
    
                        <input type="submit" class="button" value="Login">
                    </form><!--.login-form-->
                    <div class="help-text">
                        <p><a href="#">Forget your password?</a></p>
                    </div><!--.help-text-->
                </div><!--.login-tab-content-->
            </div><!--.tabs-content-->
        </div><!--.form-wrap-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script>
            const item_urls = [
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/sparkle.png',
            './sprites/book_green.png',
            './sprites/book_red.png',
            './sprites/potion_lightgreen.png',
            './sprites/potion_purple.png',
            './sprites/potion_red.png',
            './sprites/potion_teal.png',
            './sprites/ring_gold.png',
            './sprites/sword_black.png',
            './sprites/sword_blue.png',
            './sprites/sword_grey.png'
            ]
            jQuery(document).ready(function($) {
                for (x=0;x<25;x++){
                    let newDiv = document.createElement("div");
                    let newImg = document.createElement("img");
                    newImg.src = item_urls[x % item_urls.length];
                    newImg.style.height = (32 + Math.floor(Math.random() * 32)) + "px";
                    newDiv.style.left = Math.floor(Math.random() * 100) + "%";
                    newDiv.style.animation = "fall 1" + Math.floor(Math.random() * 10) + "s linear infinite";
                    newDiv.style.animationDelay = "-" + Math.floor(Math.random() * 10) +"s";
                    newDiv.style.animationDuration = (6 + Math.floor(Math.random() * 3)) + "s";
                    newDiv.appendChild(newImg);
                    document.getElementById("itemrain").appendChild(newDiv);
                }

                tab = $('.tabs h3 a');

                tab.on('click', function(event) {
                    event.preventDefault();
                    tab.removeClass('active');
                    $(this).addClass('active');

                    tab_content = $(this).attr('href');
                    $('div[id$="tab-content"]').removeClass('active');
                    $(tab_content).addClass('active');
	            });
            });
        </script>
    </body>
</html>